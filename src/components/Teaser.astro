---
interface Props {
  name?: string
  description?: string
  url?: string
  class?: string
}

const {
  name,
  description,
  url,
  class: className,
  ...attrs
} = Astro.props as Props
---

<article class:list={['not-prose', className]} {...attrs}>
  <slot>
    <h3 class="font-bold">{name}</h3>
    <p class="text-gray font-light mb-4">{description}</p>
    <a href={url}>Read now</a>
  </slot>
</article>
