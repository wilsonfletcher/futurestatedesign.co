---
import Badge from '@components/Badge.astro'
import Default from '../layouts/Default.astro'

const meta = { title: 'container', noindex: true }
---

<Default {...meta}>
  <article class="py-10 lg:py-16">
    <div class="container">
      <div class="flex flex-col items-start gap-6">
        <Badge class="bg-red text-white">H1_Large</Badge>
        <p class="h0 font-light">Landing pages titles</p>
        <p class="h0 font-regular">Landing pages titles</p>
        <p class="h0 font-medium">Landing pages titles</p>
        <p class="h0 font-bold">Landing pages titles</p>
        <p class="h0 font-black">Landing pages titles</p>
        <Badge class="bg-red text-white">H1</Badge>
        <p class="h0">Landing pages titles</p>
        <Badge class="bg-red text-white">H1_Large</Badge>
        <p class="h1">Article page titles and main headings</p>
        <Badge class="bg-red text-white">H2</Badge>
        <p class="h2">Section headings and body titles</p>
        <Badge class="bg-red text-white">H3</Badge>
        <p class="h3">Large introductions and sub-titles</p>
      </div>
      <div class="grid grid-cols-2">
        <div>
          <Badge>Button</Badge>
          <br />
          <a href="#" class="button button--primary">18/18 button copy</a>
        </div>
        <div>
          <Badge>Button</Badge>
          <br />
          <a href="#" class="button button--secondary">18/18 button copy</a>
        </div>
      </div>
    </div>
  </article>
</Default>
