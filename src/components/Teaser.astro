---
interface Props {
  name?: string
  author?: string
  description?: string
  url?: string
  class?: string
}

const {
  name,
  author,
  description,
  url,
  class: className,
  ...attrs
} = Astro.props as Props
---

<article class:list={[className]} {...attrs}>
  <h3 class="h5 font-bold">
    {name}
    {author && <span class="font-regular">by {author}</span>}
  </h3>
  <p class="text-gray font-light mb-4">{description}</p>
  <slot>
    <a href={url}>Read now</a>
  </slot>
</article>
