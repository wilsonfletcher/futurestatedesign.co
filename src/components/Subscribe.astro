---
import { Section } from './index.astro'
import LargeLink from './LargeLink.astro'

interface Props {
  class?: string
}

const { class: className, ...props } = Astro.props as Props
---

<Section
  name="Futurestate Insights"
  inline
  class="bg-[#19333c] text-white"
  {...props}
>
  <p>
    Insights into new innovations in digital business, interesting trends and
    new ways of thinking about them.
  </p>
  <LargeLink
    href="https://insights.futurestatedesign.co/s/the-wrap"
    target="_blank"
    class="not-prose"
  >
    Let me read it first
  </LargeLink>

  <iframe src="https://insights.futurestatedesign.co/embed"></iframe>
</Section>
