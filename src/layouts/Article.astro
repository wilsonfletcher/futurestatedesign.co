---
import { Schema } from 'astro-seo-schema'
import type { MarkdownLayoutProps } from 'astro'

import '@styles/global.css'

import { SITE } from '@config'
import SchemaOrganizationFutureStateDesignCo from '@components/Schema/Organization/FutureStateDesignCo.astro'
import BaseHead from '@components/BaseHead.astro'
import Footer from '@components/Footer.astro'
import Header from '@components/Header.astro'
import Subscribe from '@components/Subscribe.astro'

type Props = MarkdownLayoutProps<{
  id: string
  name: string
  headline: string
  description: string
  url: string
  image: {
    url: string
    width: number
    height: number
    alt: string
  }
  datePublished?: string
}>

const { frontmatter } = Astro.props as Props
const { id, name, headline, description, url, image, datePublished } =
  frontmatter

const meta = {
  title: `${name} - ${SITE.name}`,
  description,
  url,
  image,
}
---

<html lang={SITE.lang}>
  <BaseHead {...meta}>
    <>
      <Schema
        item={{
          '@context': 'https://schema.org',
          '@type': 'WebPage',
          name,
          headline,
          description,
          url: `${SITE.url}${url}`,
          image: {
            '@type': 'ImageObject',
            contentUrl: `${SITE.url}${image.url}`,
            description: image.alt,
          },
          mainEntity: {
            '@type': 'Article',
            '@id': `${SITE.url}${url}#${id}`,
          },
          copyrightHolder: {
            '@type': 'Organization',
            '@id': SITE.id,
          },
          copyrightYear: SITE.copyrightYear,
        }}
      />
      <Schema
        item={{
          '@context': 'https://schema.org',
          '@type': 'Article',
          '@id': `${SITE.url}${url}#${id}`,
          name,
          headline,
          description,
          url: `${SITE.url}${url}`,
          image: {
            '@type': 'ImageObject',
            contentUrl: `${SITE.url}${image.url}`,
            description: image.alt,
          },
          datePublished,
          author: [
            {
              '@type': 'Person',
              name: 'Mark Wilson',
              jobTitle: 'Managing Partner & CEO',
              image: 'https://futurestatedesign.co/images/mark-wilson.jpg',
              sameAs: ['https://www.linkedin.com/in/mwilson/'],
              worksFor: {
                '@type': 'Organization',
                name: SITE.name,
              },
            },
            {
              '@type': 'Person',
              name: 'Stephanie Fletcher',
              jobTitle: 'Managing Partner & CDO',
              sameAs: [
                'https://www.linkedin.com/in/stephanie-fletcher-6840152/',
              ],
              worksFor: {
                '@type': 'Organization',
                name: SITE.name,
              },
            },
          ],
          copyrightHolder: {
            '@type': 'Organization',
            name: SITE.name,
          },
        }}
      />
      <SchemaOrganizationFutureStateDesignCo />
    </>
  </BaseHead>
  <body>
    <div class="flex flex-col w-full min-h-screen">
      <Header />
      <main class="flex-auto">
        <article class="flex-auto" id={id}>
          <div class="container">
            <div class="grid md:gap-10 md:grid-cols-8">
              <div class="md:col-start-3 md:col-span-6">
                <h1 class="h1">{name}</h1>
                <p class="intro">{description}</p>
                <div class="prose prose-black prose-lg md:prose-xl">
                  <slot />
                </div>
              </div>
            </div>
          </div>
        </article>
      </main>
      <Subscribe />
      <Footer />
    </div>
  </body>
</html>
