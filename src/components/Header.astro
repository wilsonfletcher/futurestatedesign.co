---
import { SITE } from '@/config';
import { Icon } from 'astro-icon';

export interface Props {
  class?: string;
}

const { class: className, ...attrs } = Astro.props as Props;
---

<div class:list={['py-8', className]} {...attrs}>
  <div class="container">
    <div class="lg:grid lg:grid-cols-10 lg:gap-10">
      <div
        class="flex items-center justify-end lg:col-span-7 lg:col-start-4 lg:justify-between"
      >
        <div class="hidden lg:flex lg:gap-16">
          <a
            href={`mailto:${SITE.email}`}
            class="text-2xl font-bold hover:underline">{SITE.email}</a
          >
          <a href={`tel:${SITE.tel}`} class="text-2xl hover:underline"
            >{SITE.telephone}</a
          >
        </div>
        <button type="button" class="open-dialog-menu text-[32px]">
          <Icon name="menu" />
          <span class="sr-only">Open menu</span>
        </button>
      </div>
    </div>
  </div>
</div>
