---
import { Schema } from 'astro-seo-schema'
import { SITE } from '@/config'

export interface Props {
  name?: string
  description?: string
  url?: string
}

const { name, description, url } = Astro.props as Props
---

<Schema
  item={{
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    name,
    description,
    url: `${SITE.url}${url}`,
    copyrightHolder: {
      '@type': 'Organization',
      '@id': SITE.id,
    },
    copyrightYear: SITE.copyrightYear,
  }}
/>
