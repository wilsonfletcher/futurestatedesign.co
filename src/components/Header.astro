---
import { SITE } from '@/config'
import Logo from '@/components/Logo.astro'
import { Icon } from 'astro-icon'
// import Overlay from '@/components/Overlay.svelte'

export interface Props {
  class?: string
}

const { class: className, ...attrs } = Astro.props as Props
---

<div role="banner" class:list={['py-8', className]} {...attrs}>
  <div class="container">
    <div class="grid gap-4 md:gap-x-10 md:gap-y-20 md:grid-cols-8">
      <div class="row-start-2 md:col-span-2">
        <a href="/" title={`Return to the ${SITE.name} homepage`}>
          <Logo />
        </a>
      </div>

      <div
        class="flex justify-end md:col-span-6 md:col-start-3 md:justify-between"
      >
        <div class="hidden md:flex items-center gap-16">
          <a
            href={`mailto:${SITE.email}`}
            class="text-2xl font-bold hover:underline">{SITE.email}</a
          >
          <a href={`tel:${SITE.tel}`} class="text-2xl hover:underline"
            >{SITE.telephone}</a
          >
        </div>
        <div class="flex items-center">
          <button
            id="theme-toggle"
            type="button"
            class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5"
          >
            <Icon
              name="dark"
              id="theme-toggle-dark-icon"
              class="hidden w-5 h-5"
            />
            <Icon
              id="theme-toggle-light-icon"
              class="hidden w-5 h-5"
              name="light"
            />
          </button>

          <button
            type="button"
            x-on:click="modalMenu = true"
            class="inline-flex items-center justify-center text-[32px]"
          >
            <span class="sr-only">Open menu</span>
            <Icon name="menu" />
          </button>
        </div>
      </div>

      <div class="flex items-end md:col-span-6"></div>
    </div>
  </div>
</div>
