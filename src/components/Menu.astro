---
import IconArrow from '@components/Icon/Arrow.astro'

interface Item {
  name: string
  url: string
}

interface Props {
  items: Item[]
}

const { items } = Astro.props as Props
---

<nav class="py-24 bg-qux text-white" id="menu">
  <div class="container">
    <div class="grid gap-4 md:grid-cols-8 md:gap-10">
      <div class="md:col-start-3 md:col-span-6">
        <h3 class="h3 mb-20">Read more about:</h3>
        <ul>
          {
            items.map(({ name, url }) => (
              <li class="border-b-2 border-white/30">
                <a href={url} class="h3 flex items-center py-5 justify-between">
                  <span class="underline" set:html={name} />
                  <IconArrow />
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</nav>
