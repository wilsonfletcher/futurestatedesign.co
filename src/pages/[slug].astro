---
import Default from '@layouts/Default.astro'

export async function getStaticPaths() {
  const pages = await Astro.glob('../data/pages/**/*.mdx')

  return pages.map((page) => ({
    params: {
      slug: page.frontmatter.slug,
    },
    props: {
      page,
    },
  }))
}

const { Content, frontmatter } = Astro.props.page
const { name } = frontmatter
---

<Default>
  <article>
    <div class="container">
      <div class="section">
        <div class="lg:col-start-3 lg:col-span-6">
          <h1 class="title">{name}</h1>
          <div class="prose prose-black prose-lg md:prose-xl mb-10">
            <Content />
          </div>
        </div>
      </div>
    </div>
  </article>
</Default>
