---
import { Schema } from 'astro-seo-schema';
import { SITE } from '@/config';

const {
  id,
  name,
  description,
  url,
  email,
  logo,
  telephone,
  address,
  linkedin,
  substack,
} = SITE;
const {
  streetAddress,
  addressLocality,
  addressRegion,
  postalCode,
  addressCountry,
} = address;
---

<Schema
  item={{
    '@context': 'https://schema.org',
    '@type': 'Organization',
    '@id': id,
    name,
    description,
    url,
    logo,
    sameAs: [linkedin, substack],
    contactPoint: [
      {
        '@type': 'ContactPoint',
        telephone,
        contactType: 'Sales',
        email,
      },
    ],
    email,
    address: {
      '@type': 'PostalAddress',
      streetAddress,
      addressLocality,
      addressRegion,
      postalCode,
      addressCountry,
    },
  }}
/>
