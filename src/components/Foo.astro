---
interface Item {
  name: string
  url?: string
}

export interface Props {
  name?: string
  items: Item[]
}

const { name, items } = Astro.props as Props
---

<div class="not-prose">
  <h3>{name}</h3>
  <ul>
    {
      items.map(({ name, url }) => (
        <li>{url ? <a href={url} class="underline">{name}</a> : name}</li>
      ))
    }
  </ul>
</div>

<style>
  ul {
    @apply list-none flex flex-wrap pl-0 text-gray;
  }

  li {
    &:after {
      @apply content-['/'] text-black mx-2;
    }

    &:last-of-type {
      &:after {
        @apply content-['...'] mx-0 text-gray;
      }
    }
  }
</style>
