---
import IconArrow from '@/components/Icon/Arrow.astro'

interface Props {
  href?: string
  class?: string
}

const { href, class: className, ...attrs } = Astro.props as Props
---

<a href={href} class:list={['inline-flex items-center gap-2 text-[30px] leading-none underline font-regular', className]} {...attrs}>
  <slot />
  <IconArrow />
</a>